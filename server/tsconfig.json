{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Add this
    "emitDecoratorMetadata": true   // Add this
  },
  "include": ["src/**/*"]
}